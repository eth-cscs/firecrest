    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Tasks",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "cwd": "src/",
            "env": {
                "FLASK_APP": "tasks/tasks.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        }
    ]
}