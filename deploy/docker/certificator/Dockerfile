from f7t-base

RUN yum install -y openssh

ADD deploy/docker/certificator/requirements.txt deps/requirements.txt
RUN pip3 install -r deps/requirements.txt

ADD src/certificator/certificator.py certificator.py

ENTRYPOINT ["python3"]
CMD ["certificator.py"]
